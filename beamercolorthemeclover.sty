\mode<presentation>

\definecolor{blue}{RGB}{0,0,254}
\definecolor{lightblue}{RGB}{168,205,255}
\definecolor{dealgreen}{RGB}{129,254,0}
\definecolor{mint}{RGB}{230,255, 190}

%\definecolor{white}{RGB}{255,255,255}

\setbeamercolor{structure}{fg=blue}
\setbeamercolor{normal text}{bg=mint}
\setbeamercolor{palette primary}{fg=dealgreen,bg=blue}
\setbeamercolor{palette secondary}{fg=dealgreen,bg=blue}
\setbeamercolor{palette tertiary}{fg=dealgreen,bg=blue}
\setbeamercolor{palette quaternary}{fg=dealgreen,bg=blue}

\setbeamercolor{titlelike}{parent=palette quaternary}

\setbeamercolor{block title}{fg=dealgreen,bg=blue}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!bg}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!bg}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=lightblue}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!25!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!25!bg}

\setbeamercolor{sidebar}{bg=blue}
  
\setbeamercolor{palette sidebar primary}{fg=dealgreen}
\setbeamercolor{palette sidebar secondary}{fg=dealgreen!75}
\setbeamercolor{palette sidebar tertiary}{fg=dealgreen!75}
\setbeamercolor{palette sidebar quaternary}{fg=dealgreen}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode
<all>
